<%= form_with model: @game, local: true do |form| %>

    <% if @game.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@game.errors.count, "error") %> prohibited
            this game from being saved:
          </h2>
          <ul>
            <% @game.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
    </p>

